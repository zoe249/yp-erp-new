{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "mock/**/*.ts"]
}
